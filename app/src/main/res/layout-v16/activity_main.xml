<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#212121"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text=""
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@android:color/white"
        android:textAlignment="textEnd"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"
        android:gravity="end" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp"
        android:text=""
        android:background = "?android:attr/selectableItemBackground"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:textSize="60sp" />
    <Button
        android:id="@+id/reset"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/editText"
        android:text="C"
        android:textColor="@android:color/black"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/circle_orange"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/g_light"
        android:textSize="32sp">

    </Button>
    <Button
        android:id="@+id/divide"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/reset"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:text="/"
        android:textColor="@android:color/black"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/circle_orange"
        android:textSize="20sp">

    </Button>
    <Button
        android:id="@+id/multiply"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/divide"
        android:text="*"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/circle_orange"
        android:textSize="32dp">

    </Button>

    <Button
        android:id="@+id/clear"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/multiply"
        android:text="clr"
        android:textColor="@android:color/black"
        android:foreground="?android:attr/selectableItemBackground"
        android:fontFamily="@font/g_light"
        android:background="@drawable/circle_orange"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp">
    </Button>

    <Button
        android:id="@+id/seven"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/reset"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:text="7"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="@android:color/white"
        android:background="@drawable/circle_darkgray"
        android:fontFamily="@font/g_light"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp">

    </Button>

    <Button
        android:id="@+id/eight"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/divide"
        android:text="8"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="@android:color/white"
        android:background="@drawable/circle_darkgray"
        android:layout_toRightOf="@+id/seven"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/g_light"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp">
    </Button>

    <Button
        android:id="@+id/nine"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/multiply"
        android:text="9"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="@android:color/white"
        android:background="@drawable/circle_darkgray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/g_light"
        android:layout_toRightOf="@+id/eight"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp">
    </Button>

    <Button
        android:id="@+id/minus"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/clear"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="2dp"
        android:text="-"
        android:textColor="@android:color/black"
        android:foreground="?android:attr/selectableItemBackground"
        style="@android:style/Animation"
        android:background="@drawable/circle_orange"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/nine"
        android:layout_marginTop="8dp"
        android:textSize="20sp">
    </Button>

    <Button
        android:id="@+id/four"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/seven"
        android:text="4"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="@android:color/white"
        android:background="@drawable/circle_darkgray"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/g_light"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp">
    </Button>

    <Button
        android:id="@+id/five"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/eight"
        android:text="5"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="@android:color/white"
        android:background="@drawable/circle_darkgray"
        android:layout_toRightOf="@+id/four"
        android:fontFamily="@font/g_light"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp">
    </Button>

    <Button
        android:id="@+id/six"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/nine"
        android:layout_toRightOf="@+id/five"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/g_light"
        android:layout_marginLeft="8dp"
        android:text="6"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="@android:color/white"
        android:background="@drawable/circle_darkgray"
        android:layout_marginTop="4dp"
        android:textSize="20sp">
    </Button>

    <Button
        android:id="@+id/plus"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/minus"
        android:layout_toRightOf="@+id/six"
        android:text="+"
        android:textColor="@android:color/black"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/circle_orange"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp">
    </Button>

    <Button
        android:id="@+id/one"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/four"
        android:text="1"
        android:textColor="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/circle_darkgray"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/g_light"
        android:layout_marginTop="8dp"
        android:textSize="20sp">
    </Button>

    <Button
        android:id="@+id/two"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/five"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/one"
        android:fontFamily="@font/g_light"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="2"
        android:textColor="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/circle_darkgray"
        android:textSize="20sp">

    </Button>

    <Button
        android:id="@+id/three"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/six"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/g_light"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/two"
        android:text="3"
        android:textColor="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/circle_darkgray"
        android:textSize="20sp">

    </Button>

    <Button
        android:id="@+id/equal"
        android:layout_width="75dp"
        android:layout_height="145dp"
        android:layout_below="@+id/plus"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/three"
        android:text="="
        android:textColor="@android:color/black"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/rectangle_blue"
        android:layout_marginTop="6dp"
        android:textSize="20sp">
    </Button>

    <Button
        android:id="@+id/power"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/one"
        android:text="^"
        android:fontFamily="@font/g_light"
        android:textColor="@android:color/black"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/circle_orange"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp">
    </Button>

    <Button
        android:id="@+id/zero"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/two"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/g_light"
        android:layout_toRightOf="@+id/power"
        android:text="0"
        android:textColor="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/circle_darkgray"
        android:textSize="20sp">
    </Button>
    <Button
        android:id="@+id/point"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/three"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/zero"
        android:text="."
        android:textColor="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/circle_darkgray"
        android:textSize="20sp">
    </Button>


</RelativeLayout>